# 应用配置
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
SQLALCHEMY_DATABASE_URI=postgresql://user:password@localhost/campus3d

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# 文件存储
UPLOAD_FOLDER=./app/static/uploads
OUTPUT_FOLDER=./app/static/outputs
MAX_CONTENT_LENGTH=1073741824  # 1GB

# 云服务配置
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET=your-bucket-name

# SSH配置
SSGATE_HOST=your-ssh-host
SSGATE_USER=ssh-user
SSGATE_KEY_PATH=~/.ssh/id_rsa

# 机器学习模型
SCENE_MODEL_PATH=./app/ml_models/scene_classification/weights.pth
